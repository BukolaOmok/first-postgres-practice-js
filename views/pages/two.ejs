<%- include("../partials/header.ejs", {title: "Two - Grid Game"}) %>

<style>
  .grid {
    display: grid;
    width: 300px;
    height: 300px;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
  }

  .cell {
    aspect-ratio: 1;
    width: 2rem;
    height: 2rem;
    display: grid;
    place-items: center;
    border: 1px solid black;

  }

  .highlit {
    background: yellow;
  }
</style>
<div>hello from two.ejs</div>
<%= new Date() %>
<%= clickedCells.join(", ") %>
<h1>Grid</h1>
<div class="grid">
  <% for (let x of [10, 20, 30, 40, 50, 60, 70, 80, 90]){ %>
  <% const cellClass = clickedCells.includes(x) ? "highlit" : "normal"; %>
  <div class="cell <%= cellClass %>"><a href="<%= `/clickCell/${x}` %>"><%= x %></a></div>
  <% } %>
</div>
</body>

</html>